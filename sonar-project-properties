sonar.projectKey=tinalmeid_react-android-moderno
sonar.organization=tinalmeid

# Configurações Gerais
sonar.sources=.
sonar.sourceEncoding=UTF-8
sonar.exclusions=**/node_modules/**, **/android/**, **/ios/**, **/.expo/**, **/web-build/**

# Configurações de Teste e Cobertura
# O Sonar vai procurar arquivos de teste com estas extensões
sonar.tests=.
sonar.test.inclusions=**/*.test.js,**/*.test.tsx,**/*.spec.js,**/*.spec.tsx
sonar.test.exclusions=**/node_modules/**

# IMPORTANTE: Diz ao Sonar para varrer todas as pastas procurando o relatório do Jest
sonar.javascript.lcov.reportPaths=**/coverage/lcov.info
sonar.coverage.exclusions=**/*.test.js,**/*.test.tsx,**/App.js,**/index.js,**/babel.config.js,**/metro.config.js
