sonar.projectKey=tinalmeid_react-android-moderno
sonar.organization=tinalmeid

# ========== MONOREPO: 3 APPS INDEPENDENTES ==========
# Estratégia: Apenas arquivos TESTÁVEIS são analisados

# Somente análise de código testável (data layer, services)
sonar.sources=01-AppSorteio/src/services,02-AppNoticias/src/data,02-AppNoticias/src/components,03-AppNetflix/src/data

# Relatórios de cobertura de TODOS os apps
sonar.javascript.lcov.reportPaths=01-AppSorteio/coverage/lcov.info,02-AppNoticias/coverage/lcov.info,03-AppNetflix/coverage/lcov.info

# Configurações de Teste
sonar.tests=.
sonar.test.inclusions=**/*.test.js,**/*.test.tsx,**/*.spec.js,**/*.spec.tsx
sonar.test.exclusions=**/node_modules/**

# Exclusões globais (para qualquer arquivo não mencionado em sonar.sources)
sonar.exclusions=**/node_modules/**,**/android/**,**/ios/**,**/.expo/**,**/web-build/**,.git/**

# Configuração geral
sonar.sourceEncoding=UTF-8
